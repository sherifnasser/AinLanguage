{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/debug/ain",
            "args": [
                "${workspaceFolder}/app.ain"
            ],
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {   // Display content in STL containers pretty
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Run",
            "program": "${workspaceFolder}/build/ain",
            "args": [
                "${workspaceFolder}/AinApp/newApp.ain",
                //"${workspaceFolder}/AinApp/app.ain",
                //"${workspaceFolder}/AinApp/show.ain"
            ],
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {   // Display content in STL containers pretty
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Run Unit Tests",
            "program": "${workspaceFolder}/build/unit_tests",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {   // Display content in STL containers pretty
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}