{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/ain_file/*.cpp",
                "${workspaceFolder}/src/helpers/*.cpp",
                "${workspaceFolder}/src/lexer/*.cpp",
                "${workspaceFolder}/src/parser/*.cpp",
                "${workspaceFolder}/src/parser/scope/*.cpp",
                "${workspaceFolder}/src/statement/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-iquote${workspaceFolder}/include",
                "-iquote${workspaceFolder}/include/helpers",
                "-iquote${workspaceFolder}/include/ain_file",
                "-iquote${workspaceFolder}/include/lexer",
                "-iquote${workspaceFolder}/include/parser",
                "-iquote${workspaceFolder}/include/parser/scope",
                "-iquote${workspaceFolder}/include/statement",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}